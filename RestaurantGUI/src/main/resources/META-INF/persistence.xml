<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="restaurantPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>org.example.persistence.ProdusEntity</class>
        <class>org.example.persistence.MancareEntity</class>
        <class>org.example.persistence.BauturaEntity</class>
        <class>org.example.persistence.PizzaEntity</class>

        <properties>
            <!-- PostgreSQL connection (adjust in src/main/resources/config.json or env if you prefer) -->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/restaurantmip"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="1q2w3e"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>

            <!-- Hibernate config -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>

</persistence>
